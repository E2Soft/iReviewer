<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!-- name -->
    <TextView
        android:id="@+id/group_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:text="@string/review_name"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />
 
    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:layout_toRightOf="@+id/group_name_label"
        android:layout_toEndOf="@+id/group_name_label" 
        android:layout_margin="5dp"/>
    <!-- user count -->
    <TextView android:id="@+id/group_user_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:text="@string/user_count"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/group_title"
        android:layout_margin="5dp" />
 
    <TextView
        android:id="@+id/group_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:layout_toRightOf="@+id/group_user_count_label"
        android:layout_toEndOf="@+id/group_user_count_label"
        android:layout_below="@id/group_title" 
        android:layout_margin="5dp"/>
    <!-- user created -->
    <TextView android:id="@+id/group_user_created_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:text="@string/user_created"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/group_user_count"
        android:layout_margin="5dp" />
 
    <TextView
        android:id="@+id/group_user_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:layout_toRightOf="@+id/group_user_created_label"
        android:layout_toEndOf="@+id/group_user_created_label"
        android:layout_below="@id/group_user_count" 
        android:layout_margin="5dp"/>
 	<!-- last modified -->
    <TextView android:id="@+id/group_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:text="@string/last_date_modified"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/group_user_created"
        android:layout_margin="5dp" />
    
    <TextView
        android:id="@+id/group_lastModified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:layout_toRightOf="@+id/group_subTitle"
        android:layout_toEndOf="@+id/group_subTitle"
        android:layout_below="@id/group_user_created" 
        android:layout_margin="5dp"/>

</RelativeLayout>
